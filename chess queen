#include <iostream>
using namespace std;

int main(){
 int x1, y1, x2, y2, a, b ;
 while(cin>>x1>>y1>>x2>>y2){
     if(x1>0 || y1>0 || x2>0 || y2>0){
  if(x1 > x2)
   a=x1-x2;
  else if(x1 < x2)
   a=x2-x1;
  else
   a=0;
 if(y1 > y2)
  b=y1-y2;
 else if(y1 < y2)
  b=y2-y1;
 else
  b=0;
 if(a == b && a && b)
     cout<<1<<endl;
 else if(a != b && a==0 && b)
     cout<<1<<endl;
 else if(a != b && a && b ==0)
     cout<<1<<endl;
 else if(a !=b)
     cout<<2<<endl;
 else if(a == b && a==0 && b==0)
     cout<<0<<endl;
 
     }
 }
}
