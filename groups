#include <bits/stdc++.h>
using namespace std;
int main(){
	int n;
	cin>>n;
		int a[n];
		for(int i=0;i<n;i++){
			cin>>a[i];
		}
		int b=0,c,d;
		for(int i=0;i<n;i++){
		
		if(a[i]==i){
		b=b+1;	
			a[i]=-1;
		}
		else if(a[i]!=-1){
	
		
		
		c=i; 
		while(a[c]!=-1){
			d=a[c];
			a[c]=-1;
			c=d;
		}
		b=b+1;
	}
	
	}cout<<b;
		
}
